{% extends '/admin/content/content_form.html.twig' %}

{% block content_form %}
    {{ parent() }}

    <div class="form-group">
        {{ form_label(form.file) }}

        {{ form_label(form.file, "empty_file", { 'label_attr': {
            'class': 'col-xl-8 form-file m-0',
            'id': 'article_label_file'
        }}) }}

        {{ form_widget(form.file, { 'attr': {
            'class': 'd-none',
        } }) }}

        {{ form_errors(form.file) }}
    </div>

    <div class="form-group">
        {{ form_label(form.summarize) }}
        {{ form_widget(form.summarize, { 'attr': { 'class': 'form-control col-xl-8 textarea-summarize' } }) }}
        {{ form_errors(form.summarize) }}
    </div>
{% endblock %}
