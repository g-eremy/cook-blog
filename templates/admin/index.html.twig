{% extends 'base.html.twig' %}

{% block body %}
    <article class="article-list mb-3 pb-4">
        <header>
            <h1 class="h2">
                {% trans from "admin" %}config{% endtrans %}
            </h1>
        </header>
        {% include '/includes/content_handler.html.twig' with {
            'array': configs,
            'content_attr': 'fullName',
            'id_column': 'name',
            'update_path_name': 'config_update',
            'delete_path_name': false
        } only %}
    </article>

    <article class="article-list mb-3 pb-4">
        <header>
            <h1 class="h2">
                {% trans from "admin" %}handling_user{% endtrans %}
            </h1>
        </header>
        <a href="{{ path('admin_user_add') }}" class="btn btn-primary">
            {% trans from "admin" %}add_user{% endtrans %}
        </a>
        <a href="{{ path('admin_user_index') }}" class="btn btn-primary">
            {% trans from "admin" %}handle_user{% endtrans %}
        </a>
    </article>

    <article class="article-list mb-3 pb-4">
        <header>
            <h1 class="h2">
                {% trans from "admin" %}handling_article{% endtrans %}
            </h1>
        </header>
        <a href="{{ path('admin_article_add') }}" class="btn btn-primary">
            {% trans from "admin" %}add_article{% endtrans %}
        </a>
        <a href="{{ path('admin_article_index') }}" class="btn btn-primary">
            {% trans from "admin" %}handle_article{% endtrans %}
        </a>
    </article>

    <article class="article-list mb-3 pb-4">
        <header>
            <h1 class="h2">
                {% trans from "admin" %}handling_page{% endtrans %}
            </h1>
        </header>
        <a href="{{ path('admin_page_add') }}" class="btn btn-primary">
            {% trans from "admin" %}add_page{% endtrans %}
        </a>
        <a href="{{ path('admin_page_index') }}" class="btn btn-primary">
            {% trans from "admin" %}handle_page{% endtrans %}
        </a>
    </article>
{% endblock %}
