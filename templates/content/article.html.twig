{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
	{% if is_validate %}
		<p class="text-success">Commentaire posté avec succès</p>
		<p><a href="{{ path('article', {url: article.url}) }}" class="btn btn-primary">Retour</a></p>
	{% else %}
		<article class="article">
			<header class="mb-3"><h1>{{ article.title }}</h1></header>
			<aside class="aside mb-2">posté le {{ article.time|date("m/d/Y h:i") }} par {{article.user.username}}</aside>
			<div>
				{{ article.content|raw }}
			</div>

			{% if global_config['comment_enable'] %}
				<footer class="mt-3 pt-3 border-top border-secondary">
					<div class="mb-3 border-bottom border-secondary">
						<div class="mb-3">
							<a href="#comment-form" class="btn btn-primary btn-sm" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="comment-form">Poster un commentaire</a>
						</div>
						<div class="collapse mb-3" id="comment-form">
							{{ form_start(comment_form, {'method': 'post'}) }}
								<div class="form-group">
									{{ form_label(comment_form.name) }}
									{{ form_widget(comment_form.name, { 'attr': { 'class': 'form-control col-xl-8' } }) }}
									{{ form_errors(comment_form.name) }}

									{{ form_label(comment_form.message) }}
									{{ form_widget(comment_form.message, { 'attr': { 'class': 'form-control col-xl-8' } }) }}
									{{ form_errors(comment_form.message) }}
								</div>

								<div>
									{{ form_widget(comment_form.save, { 'attr': { 'class': 'btn btn-primary btn-sm px-5' } }) }}
								</div>

								{{ form_rest(comment_form) }}
							{{ form_end(comment_form) }}
						</div>
					</div>
					<div>
						{% set no_comment = true %}

						{% for c in article.comments %}
							{% set no_comment = false %}

							<div class="mt-3">
								<div class="comment-header">
									<span>{{ c.name }}</span>
									<span>{{ c.time|date("m/d/Y h:i") }}</span>
									{% if is_granted('ROLE_ADMIN') %}
										<span>
											<a
												href="javascript:void(0)"
												onclick="window.display_prompt('Êtes-vous sure de bien vouloir supprimer ce commentaire', '{{ path('admin_comment_delete', {id: c.id}) }}')">
												supprimer
											</a>
										</span>
									{% endif %}
								</div>
								<div>
									<p>{{ c.message }}</p>
								</div>
							</div>
						{% endfor %}

						{% if no_comment %}
							<p>Il n'y a pas de commentaire</p>
						{% endif %}
					</div>
				</footer>
			{% endif %}
		</article>
	{% endif %}
{% endblock %}
