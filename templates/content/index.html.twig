{% extends 'base.html.twig' %}

{% block body %}
	{% set is_empty = true %}

	{% for o in articles %}
		{% set is_empty = false %}

		<article class="overflow-auto mb-3 pb-4 article article-list">
			<header>
				<h1 class="h3"><a href="{{ path('article', {url: o.url}) }}">{{ o.title }}</a></h1>
			</header>
			<div>
				<p>
					<img src="{{ asset("files/#{o.filename}") }}" class="summarize-img mr-3" alt="Image rÃ©sumant l'article">
					{{ o.summarize }}
				</p>
			</div>
		</article>
	{% endfor %}

	{% if is_empty %}
		<p class="text-error">Il n'y a aucun article</p>
	{% endif %}

	{% include '/includes/pagination.html.twig' with {
		'route_name': 'index_pagined',
		'nb_page': nb_page,
		'current_page': current_page
	} only %}
{% endblock %}
