{% set is_empty = true %}

<table class="table table-striped table-list table-bordered">
    <tbody>
    {% for o in array %}
        {% set is_empty = false %}

        <tr>
            <td class="w-75">{{ attribute(o, content_attr) }}</td>
            <td class="form-group">
                <a href="{{ path(update_path_name, {id: o.id}) }}" class="form-control btn btn-primary">Modifier</a>
            </td>
            <td class="form-group">
                <a href="{{ path(delete_path_name, {id: o.id}) }}" class="form-control btn btn-primary">Supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% if is_empty %}
    <p class="text-error">Il n'y a rien ici...</p>
{% endif %}
