{% set is_empty = true %}

<table class="table table-striped table-list table-bordered">
    <tbody>
    {% for o in array %}
        {% set is_empty = false %}

        <tr>
            <td class="w-75">{{ attribute(o, content_attr) }}</td>
            {% if update_path_name %}
                <td class="form-group">
                    <a href="{{ path(update_path_name, {id: attribute(o, id_column)}) }}" class="form-control btn btn-primary">Modifier</a>
                </td>
            {% endif %}

            {% if delete_path_name %}
                <td class="form-group">
                    <button
                        class="form-control btn btn-primary"
                        onclick="window.display_prompt('Êtes-vous sure de bien vouloir supprimer cet élément', '{{ path(delete_path_name, {id: attribute(o, id_column)}) }}')">
                            Supprimer
                        </button>
                </td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>

{% if is_empty %}
    <p class="text-error">Il n'y a rien ici...</p>
{% endif %}
